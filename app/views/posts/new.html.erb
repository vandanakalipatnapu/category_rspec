<style>
	.clr{color:red;}
</style>

<div class="container">
<center><h2 class="text-danger">New Post</h2></center>
<hr/>
	<div class="form-horizontal">
		<%= form_for @post do |p| %>
			<div class="form-group ">
				<%= p.label :Title,class:"control-label col-sm-4"%>
			<div class="col-sm-4">
				<%= p.text_field :title,class:"form-control",id:"title"%>
				<div id = "titleid"class = "clr"></div>
			</div>
			</div>

			<div class="form-group">
				<%= p.label :description,class:"control-label col-sm-4"%>
			<div class="col-sm-4">
				<%= p.text_area :description,class:"form-control"%>
			</div>
			</div>

			<div class="form-group">
				<%= p.label :Category,class:"control-label col-sm-4"%>
			<div class="col-sm-4">
				<%= p.select :category, options_for_select([["Tele Communication", "Tele Communication"],["Comedy","Comedy"],["Scientific","Scientific"]]),{prompt: "select category"},class:"form-control" %>
			</div>
			</div>

			<div class="form-group">
				<%= p.submit "Save",class:"col-sm-offset-4 btn btn-sm btn-info"%>
				<%= link_to "All Posts",posts_path,class:"btn btn-sm btn-info col-sm-offset-0"%>
			</div>	

		<%end%>
				
	</div>
</div>

